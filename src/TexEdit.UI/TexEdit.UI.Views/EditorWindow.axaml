<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TexEdit.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="TexEdit.UI.Views.EditorWindow"
        x:Name="EditorWindowInstance">

    <Design.DataContext>
        <vm:EditorWindowViewModel/>
    </Design.DataContext>

    <DockPanel LastChildFill="False">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Quit" Command="{Binding FileQuitCommand}"/>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="Git _repository..." Command="{Binding HelpGitRepositoryCommand}"/>
                <Separator/>
                <MenuItem Header="_About TexEdit..." Command="{Binding HelpAboutCommand}"/>
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
